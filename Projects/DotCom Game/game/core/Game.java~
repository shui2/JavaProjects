package game.core;

import java.util.Random;
import java.util.Scanner;

public class Game {

	public static void main(String[] args) {
		int numOfGuesses = 0;
		
		Scanner sc = new Scanner(System.in);
		Random random = new Random();
		DotCom a = new DotCom();
		
		int startingPosition = random.nextInt(5);
		int[] array = {startingPosition, startingPosition + 1, startingPosition + 2};

		a.setLocationCells(array);
		
		while (a.getNumberOfHits() != 3) {
			System.out.print("Enter a number: ");
			String result = sc.nextLine();
			
			if (result.length() == 0) {
				continue;
			}
			
			a.checkYourself(result);
			numOfGuesses++;
		}

		System.out.println("Number of guesses: " + numOfGuesses);	
	}
}

